pipeline {
    agent { node { label 'maven' } }
    environment { APP_NAMESPACE = 'jcasop-recover' }
    stages {
        stage('Test') {
            options { timeout(time: 500, unit: 'SECONDS') }
            steps {
                dir('shopping-cart-v2') {
                    sh './mvnw clean test'
                }
            }
        }
    }
}
